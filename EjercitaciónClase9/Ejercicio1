//Ejercicio 1:  
//Declara dos variables numéricas numero1 y numero2. Pide al usuario 
//que ingrese dos números y muestra cuál es mayor o si son iguales. 

//COLOCAMOS EL PROMPT
const prompt = require("prompt-sync")({ sigint: true });
// Pedimos al usuario que ingrese dos  números y los guardamos en  variables
let numero1 = prompt("Por favor, ingresa un número:");
let numero2 = prompt("Por favor, ingresa otro número:");
// Convertimos el valor ingresado a un número
numero1 = parseFloat(numero1);
numero2 = parseFloat(numero2);
// Verificamos cuál número es mayor o si son iguales
if (numero1 > numero2) {
  console.log("El número " + numero1 + " Es mayor a " + numero2 );
} else if (numero1 < numero2) {
  console.log ("El número " + numero2 + " es mayor que " + numero1);
} else {
  console.log("Ambos número son iguales.");
}
