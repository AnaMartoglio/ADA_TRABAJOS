//Ejercicio 8:  
//Pide al usuario que ingrese las longitudes de los tres lados de un 
//triángulo. Determina y muestra si el triángulo es equilátero, isósceles o 
//escaleno. (Investiga sobre los triángulos para determinar la formula) 

const prompt = require("prompt-sync")({ sigint: true });

let lado1 = parseInt(prompt("Ingresa un número: "));
let lado2 = parseInt(prompt("Ingresa un segundo número: "));
let lado3 = parseInt(prompt("Ingresa el último número: "));

if (lado1 === lado2 && lado2 === lado3){
  console.log("El triángulo que intenta formar es equilatero.");
} else if (lado1 === lado2 || lado1 === lado3 || lado2 === lado3){
  console.log("El triángulo que intenta formar es isósceles.")
}else{
  console.log("El triángulo que intenta formar es escaleno.");
}